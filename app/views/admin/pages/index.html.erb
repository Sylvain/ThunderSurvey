<table cellspacing="0" cellpadding="0" class='grid'>
  <col width='70%'/>
  <col width='10%'/>
  <col width='20%'/>
<thead>    
  <tr>    
    <th>标题</th>
    <th>Slug</th>
    <th>操作</th>
  </tr>
</thead>
<tbody>  
  <% @pages.each do |page| -%>
    <tr>
      <td class='title'><%= page.title %></td>
      <td>/<%= page.slug %></td>
      <td>
        <%= link_to '查看', "/#{page.slug}", :target => '_blank' %> |
        <%= link_to '编辑', edit_admin_page_path(page) %> |
        <%= link_to '删除', admin_page_path(page), :method => 'delete', :confirm => '确定删除？' %>
      </td>
    </tr>
  <% end -%>                                              
</tbody>
</table>

<%= link_to '新建', new_admin_page_path,:class => 'btn' %>
