<h1>Editing form</h1>

<% form_for(@form) do |f| %>
  <%= f.error_messages %>

  <%= render :partial => 'form', :object => f %>
  <%= f.submit '更新' %>
<% end %>


<% @form.fields.each do |field| %>
  <%= render 'field', :object => field %>
  <%= link_to 'Edit', edit_form_field_path(@form, field) %>|
  <%= link_to 'Delete', form_field_path(@form, field), :method => 'delete', :confirm => 'Are you sure?' %>
<% end %>

