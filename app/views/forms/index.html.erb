<% content_for :headers do -%>
  <script type="text/javascript" charset="utf-8">
    $(document).ready(function(){     
     $("td.title").hover(
       function(){$(this).find('.action').toggle()})
     })    
  </script>
<% end -%>


<div class='span-18'> 
  <% if @forms.empty? %>
    <p style="font-size:14px;">您还没有创建任何问卷，现在就<%= link_to '创建您的第一个问卷', '#', :onclick => "window.open('/forms/new', 'StatusBar', 'toolbar=yes,resizable=yes,scrollbars=no,width=820,height=700,left=0,top=0');" %>吧！</p>
  <% end %>
  <table class='grid big' border="0" cellspacing="0" cellpadding="0"> 
    <col width='55%'>
    <col width='15%'>
    <col width='30%'>
    <tbody> 
      <% @forms.each do |form| %> 
      <tr id="<%=form.id%>">        
        <td class='title'><%=link_to form.title,form_rows_path(form, :edit_key => form.edit_key) %><span><%= form.klass.count %>回应 <%= '>>' unless form.klass.count == 0%></span>
        </td>                                                                                 
        <td><%= form.updated_at.to_date%></td> 
        <td class='opt'> 
          <a href="#" onclick="window.open('<%=edit_form_path(form, :edit_key => form.edit_key)%>', '<%= form.id %>', 'toolbar=yes,resizable=yes,scrollbars=no,width=820,height=800,left=0,top=0');" title="new form" class='ag' >编辑</a> 
          <%= link_to '查看', form_path(form), :class => 'ag', :target => '_blank' %>
          <%= link_to '报表', chart_form_path(form), :class => 'chart', :target => '_blank' %>
          <%= link_to '删除', form_path(form, :edit_key => form.edit_key), :confirm => '你确定删除此问卷嘛?', :method => 'delete',:class => 'ag' %>
        </td>
      </tr>
      <% end %>       
    </tbody>
    </table>
</div>

