<p id="option<%= option.id %>">
  <%= check_box_tag 'check', false %>
  <%= text_field_tag "options[#{option.id}]", option.value %>
  <%= link_to_remote '删除', :update => "flash", 
                :url => form_field_option_path(parent, field, option, :edit_key => parent.edit_key),
                :method => 'delete',
                :success => "$('#option#{option.id}').fade();" %>
</p>