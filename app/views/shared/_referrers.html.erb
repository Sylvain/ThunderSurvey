<table class='grid' id='rows' cellspacing="0" cellpadding="0">
  <thead>
    <tr>
    <th>来源</th>
    <th>访问数量</th>                                                                          
    </tr>
  </thead>
  <tbody> 
    <% referrers.each do |r| %> 
    <tr>
      <td class='text-center'><%=r['host']||'直接访问'%></td>
      <td class='text-center'><%=r['count']%></td>
    </tr>
    <% end %>
  </tbody>
</table>