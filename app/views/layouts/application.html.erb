<!doctype html>      

<html lang="en">
<head>          
  <meta name='viewport' content='width=device-width' />
  <meta charset="utf-8" />
  <meta name="csrf-token" content="<%= form_authenticity_token %>" />
  <meta name="csrf-param" content="authenticity_token" />
  
  <%= stylesheet_link_tag 'custom'  %>
  <%= stylesheet_link_tag "jquery-ui" %>
  <%= stylesheet_link_tag "ui.jqgrid" %> 
  <!--[if IE]>
   <script src="http://html5shiv.googlecode.com/svn/trunk/html5.js"></script>
  <![endif]-->
  <script src="/javascripts/jquery.js" type="text/javascript"></script>
  <script src="/javascripts/jquery-ui.js" type="text/javascript"></script>
  <script src="/javascripts/jrails.js" type="text/javascript"></script>
  <script src="/javascripts/rails.js" type="text/javascript"></script>
  <script src="/javascripts/application.js" type="text/javascript"></script> 

  <script language="JavaScript" src="/javascripts/i18n/grid.locale-cn.js"></script>
  <script type="text/javascript">
  	$.jgrid.no_legacy_api = true;
  	$.jgrid.useJSON = true;
  </script>
  <script language="JavaScript" src="/javascripts/jquery.jqgrid.js"></script>

  <%= yield :headers %>                                                   
  <title>沙路在线表单</title>
</head>

<body>
  <div id="main_container">
    <header class='all'>
      <div class="logo">
        <a href="/">沙路在线表单</a>
      </div>
      <nav class='login'>
        <% if logged_in? %>	
          <%= link_to '注销', logout_path, :method => 'delete' %>
        <% else %>
          <%= link_to '注册新用户', signup_path %> |
          已经注册了？<%= link_to '立即登录', login_path %>
        <% end %>
      </nav>
    </header>
    
    <section class="content">
        <section id="flash"><%= flash_div %></section>
        <%= yield %>
    </section>
    <footer>
         sandsroad
    </footer>
  </div>
</body>
</html>
