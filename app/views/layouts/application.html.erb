<!doctype html>      

<html lang="en">
<head>          
  <meta name='viewport' content='width=device-width' />
  <meta charset="utf-8" />
  <meta name="csrf-token" content="<%= form_authenticity_token %>" />
  <meta name="csrf-param" content="authenticity_token" />
  
  <%= stylesheet_link_tag 'custom', "jquery-ui", "ui.jqgrid", :cache => 'app.cache'  %>
  <!--[if IE]>
   <script src="http://html5shiv.googlecode.com/svn/trunk/html5.js"></script>
  <![endif]-->
  <%= javascript_include_tag 'jquery', 'jquery-ui', 'jrails', 'rails', 'application', 
          'i18n/grid.locale-cn', 'jquery.jqgrid', :cache => 'app.cache' %>

  <script type="text/javascript">
  	$.jgrid.no_legacy_api = true;
  	$.jgrid.useJSON = true;
  </script>

  <script type="text/javascript" charset="utf-8">
    $(document).ready(function(){     
      $('.button').button();
     })    
  </script>
  <%= yield :headers %>                                                   
  <title>抢座网－表单</title>
</head>

<body>   
  <%= render :partial => '/shared/header' %>
  <div id="main_container">
    <section class="content">
        <%= render :partial => '/shared/notice' %> 
        <div id="saving" style="display:none;">正在保存...</div>
        <%= yield %>
    </section>
  </div> 
  <footer>
       &copy; 抢座网 2010
  </footer>
</body>
</html>
