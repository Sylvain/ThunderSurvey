<h2>组织者注册</h1>
<% @user.password = @user.password_confirmation = nil %>

<%= error_messages_for :user %>
<% form_for :user, :url => users_path, :html => {:multipart => true} do |f| -%>
  <p>
    <%= label_tag '组织名称' %><br/>
    <%= f.text_field :name %>
  </p>
  
  <p>
    <%= label_tag '组织性质' %><br/>
    <%= f.select :kind, ['个人', '企业', '公益/教育机构', '其它'] %>
  </p>
  
  <p>
    <%= label_tag '联系人' %><br/>
    <%= f.text_field :contact %>
  </p>

  <p>
    <%= label_tag '联系人Email' %><br/>
    <%= f.text_field :email %>
  </p>
  
  <p>
    <%= label_tag '联系人电话' %><br/>
    <%= f.text_field :phone_number %>
  </p>

  <p>
    <%= label_tag 'password', '密码' %><br/>
    <%= f.password_field :password %>
  </p>

  <p>
    <%= label_tag 'password_confirmation', '密码确认' %><br/>
    <%= f.password_field :password_confirmation %>
  </p>
  
  <p>
    <%= label_tag '组织简介' %><br/>
    <%= f.text_area :description %>
  </p>
  
  <p>
    <%= label_tag '组织Logo' %><br/>
    <%= f.file_field :logo %>
  </p>

  <p><%= submit_tag '注册' %></p>
<% end -%>
