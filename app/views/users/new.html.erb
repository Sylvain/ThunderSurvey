<h2>新用户注册</h2>
<% @user.password = @user.password_confirmation = nil %>

<%= error_messages_for @user %>
<% form_for :user, :url => users_path, :html => {:multipart => true} do |f| -%>
  <p>
    <%= label_tag '用户名' %><br/>
    <%= f.text_field :login %><span style="color:red"><%= @user.errors.on(:login) %></span>
  </p>

  <p>
    <%= label_tag 'Email' %><br/>
    <%= f.text_field :email %><span style="color:red"><%= @user.errors.on(:email) %></span>
  </p>
  
  <p>
    <%= label_tag 'password', '密码' %><br/>
    <%= f.password_field :password %><span style="color:red"><%= @user.errors.on(:password) %></span>
  </p>

  <p>
    <%= label_tag 'password_confirmation', '密码确认' %><br/>
    <%= f.password_field :password_confirmation %><span style="color:red"><%= @user.errors.on(:password_confirmation) %></span>
  </p>

  <p><%= submit_tag '注册' %></p>
<% end -%>
