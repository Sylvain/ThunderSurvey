<div class="options">
  <% field.options.each do |option| %>
    <%= render :partial => '/shared/drop_option', :locals => {:value => option.value, :parent => parent, :field => field} %>
  <% end if field %>
  <% if field.nil? || field.options.size == 0 %>
    <%= render :partial => '/shared/drop_option', :locals => {:value => '选项1', :parent => parent, :field => field} %>
  <% end %>
</div>
<p>
  <p>
    <%= text_field_tag "option", "", :onfocus => "field_add_option(this, 'drop');", :style => "opacity:0.5;" %>
  </p>
  <% if false %><%= link_to '增加选项', '#', :onclick => "field_add_option(this, 'drop')", :remote => true %><% end %>
</p>
