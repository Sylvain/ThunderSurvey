<% field.options.each do |option| %>
  <p>
    <%= check_box_tag 'radio', false %>
    <%= option.value %>
    (<%= link_to 'Remove', form_field_option_path(@form, field, option), :method => 'delete', :confirm => 'Are you sure?' %>)
  </p>
<% end %>


<% form_for :option, :url => form_field_options_path(@form, field) do |form| %>
  <p>
    <%= check_box_tag 'check', false %>
    <%= form.text_field :value %>
  </p>
  <p>
    <%= form.submit "增加" %>
  </p>
<% end %>
