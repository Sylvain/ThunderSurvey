<div>
  <p>
    <%= link_to_remote '增加选项', :update => "options#{field.id}",
                  :url => new_form_field_option_path(parent, field),
                  :position => :bottom,
                  :method => 'get' %>
  </p>
  <div id="options<%= field.id %>">
    <% field.options.each do |option| %>
      <%= render :partial => '/shared/option', :object => option, :locals => {:parent => parent, :field => field} %>
    <% end %>
  </div>
</div>
