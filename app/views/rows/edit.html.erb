<%= content_for :notes do %>
<div class='notes right'>
  <%=link_to '查看表单',form_path(@form),:target => '_blank',:class => 'ag' %> |
  <%=link_to '导出CSV',form_rows_path(@form, :format => :csv, :edit_key => @form.edit_key),:target => '_blank',:class => 'ag' %> |
  <%=link_to '导出XLS',form_rows_path(@form, :format => :xls, :edit_key => @form.edit_key),:target => '_blank',:class => 'ag' %>                                             
 </div> 
<% end %>

<%= pagenav_area do -%>
  <span><%=link_to '<< 返回', form_rows_path(@form, :edit_key => @form.edit_key) %> / 编辑记录  </span>
<% end -%>
<%= form_for [@form, @row], :url => form_row_path(@form, @row) do |f| %>
  <% @form.fields.each do |field| %>
    <div class='field'>
      <div class='question'>
      <%= f.label field.id, field.name,:class => 'q_title' %><br />
      <% if field.input == 'text' %>
        <%= f.text_area "f#{field.id}" %>
      <% else %>
        <%= f.text_field "f#{field.id}" %>
      <% end %>
      </div>      
    </div>
  <% end %>
  <%= f.submit "更新",:class => 'submit' %>
<% end %>    